<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisClaro"
    android:padding="@dimen/padding1"
    tools:context=".SesionActivity">

    <LinearLayout
        android:id="@+id/LayoutBannerSuperior"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bannerHeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <com.google.android.gms.ads.AdView
            android:id="@+id/bannerSuperior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adSize="SMART_BANNER"
            app:adUnitId="@string/admobbannercodesuperior"
            />

    </LinearLayout>
    <View
        android:id="@+id/lineSuperior"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightLineBanner"
        android:background="@color/colorlinebanner"
        app:layout_constraintTop_toBottomOf="@+id/LayoutBannerSuperior"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/LayoutBannerInferior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LayoutBannerSuperior"
        android:padding="@dimen/padding1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextViewActivitySesionMicuenta"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginTop="@dimen/margin3"
                android:gravity="center"
                android:paddingBottom="@dimen/padding2"
                android:text="@string/mi_cuenta"

                android:textAlignment="center"

                android:textSize="@dimen/SesionTitleFontText" />


            <TextView
                android:id="@+id/editTextActivitySesionCuentaGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin1"
                android:background="@drawable/campo_redondeado_white"
                android:gravity="start"
                android:padding="@dimen/padding0"
                android:textColor="@color/Negro"
                android:textSize="@dimen/SesionFontText" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editTextActivitySesionUsername"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin1"


                    android:gravity="start"
                    android:text="@string/nombre"

                    android:textSize="@dimen/SesionFontText" />

                <AutoCompleteTextView
                    android:id="@+id/editTextActivitySesionNombreUsuario"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin1"
                    android:background="@drawable/campo_redondeado_white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="start"
                    android:hint="@string/username"
                    android:inputType="text"

                    android:labelFor="@id/editTextActivitySesionUsername"
                    android:maxLength="32"
                    android:paddingStart="@dimen/padding1"
                    android:paddingLeft="@dimen/padding1"

                    android:paddingEnd="@dimen/padding1"
                    android:paddingRight="@dimen/padding1"
                    android:textSize="@dimen/SesionFontText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewActivitySesionFecha"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin1"
                    android:text="@string/fechaNacimiento"
                    android:textAlignment="center"

                    android:textSize="@dimen/SesionFontText" />

                <TextView
                    android:id="@+id/editTextActivitySesionFechaNacimiento"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin1"
                    android:background="@drawable/campo_redondeado_white"
                    android:paddingStart="@dimen/padding1"
                    android:paddingLeft="@dimen/padding1"
                    android:paddingEnd="@dimen/padding1"
                    android:paddingRight="@dimen/padding1"
                    android:textAlignment="center"
                    android:textColor="@color/Negro"
                    android:textSize="@dimen/SesionFontText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewActivitySesionPais"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="@dimen/margin1"
                    android:layout_marginLeft="@dimen/margin1"
                    android:layout_marginTop="@dimen/margin1"
                    android:layout_marginEnd="@dimen/margin1"
                    android:layout_marginRight="@dimen/margin1"
                    android:layout_marginBottom="@dimen/margin1"
                    android:text="@string/pais"
                    android:textAlignment="center"

                    android:textSize="@dimen/SesionFontText" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <Spinner
                        android:id="@+id/SpinnerActivitySesionPaises"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/campo_redondeado_white"

                        android:paddingStart="@dimen/padding1"
                        android:paddingLeft="@dimen/padding1"
                        android:paddingEnd="@dimen/padding1"
                        android:paddingRight="@dimen/padding1"

                        android:spinnerMode="dialog"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="@dimen/margin2"
                        android:layout_marginRight="@dimen/margin2"
                        android:background="@color/grisMedioClaro"

                        android:contentDescription="@android:string/ok"
                        android:src="@drawable/ic_dropdown_trim_grande"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/SpinnerActivitySesionPaises"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin2"
                android:layout_marginBottom="@dimen/margin2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewActivitySesionGenero"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="@dimen/margin1"
                    android:layout_marginLeft="@dimen/margin1"
                    android:layout_marginTop="@dimen/margin1"
                    android:layout_marginEnd="@dimen/margin1"
                    android:layout_marginRight="@dimen/margin1"
                    android:layout_marginBottom="@dimen/margin1"
                    android:text="@string/genero"
                    android:textAlignment="center"

                    android:textSize="@dimen/SesionFontText" />

                <RadioGroup
                    android:id="@+id/radioGroupActivitySesionGeneros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin2"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/radioButtonActivitySesionM"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_marginStart="@dimen/margin2"
                        android:layout_marginLeft="@dimen/margin2"

                        android:checked="true"
                        android:textAlignment="center"

                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_redondeado"
                        android:contentDescription="@string/male"
                        android:padding="@dimen/padding0"
                        android:src="@drawable/male" />

                    <RadioButton
                        android:id="@+id/radioButtonActivitySesionF"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/margin2"
                        android:layout_marginLeft="@dimen/margin2"
                        android:checked="false" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_redondeado"
                        android:contentDescription="@string/female"
                        android:padding="@dimen/padding0"
                        android:src="@drawable/female" />

                </RadioGroup>


            </LinearLayout>

            <Button
                android:id="@+id/buttonActivitySesionActualizar"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin2"
                android:background="@drawable/boton_redondeado"
                android:onClick="update"
                android:padding="@dimen/padding1"
                android:text="@string/update"

                android:textSize="@dimen/SesionButtonText" />

            <ImageView
                android:id="@+id/buttonActivityMainSalir"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin2"
                android:layout_marginBottom="@dimen/margin2"
                android:background="@drawable/boton_redondeado"
                android:contentDescription="@string/salir"
                android:onClick="cerrarSesion"

                android:padding="@dimen/padding1"
                android:src="@drawable/shutdown_black" />

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/lineInferior"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightLineBanner"
        android:background="@color/colorlinebanner"
        app:layout_constraintBottom_toTopOf="@+id/LayoutBannerInferior"
        android:layout_marginTop="@dimen/marginLineBanner"
        />
    <LinearLayout
        android:id="@+id/LayoutBannerInferior"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bannerHeight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.gms.ads.AdView
            android:id="@+id/bannerInferior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adSize="SMART_BANNER"
            app:adUnitId="@string/admobbannercodeinferior"
            android:layout_marginTop="@dimen/marginLineBanner"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>