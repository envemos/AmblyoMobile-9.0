<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadActivity"
    android:padding="@dimen/padding1"
    android:orientation="vertical"
    android:background="@color/grisClaro">

    <LinearLayout
        android:id="@+id/LayoutBannerSuperior"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bannerHeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <com.google.android.gms.ads.AdView
            android:id="@+id/bannerSuperior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adSize="SMART_BANNER"
            app:adUnitId="@string/admobbannercodesuperior"
            />
    </LinearLayout>
    <View
        android:id="@+id/lineSuperior"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightLineBanner"
        android:background="@color/colorlinebanner"
        app:layout_constraintTop_toBottomOf="@+id/LayoutBannerSuperior"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@+id/LayoutBannerInferior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LayoutBannerSuperior"
        android:padding="@dimen/padding1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewActivityActividadActividad"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin2"
                android:text="@string/mi_actividad"
                android:textAlignment="center"

                android:textSize="@dimen/ActividadTitleFontText" />

            <TextView
                android:id="@+id/textViewActivityActividadTotal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin1"
                android:text="@string/total"

                android:textSize="@dimen/ActividadFontText" />

            <TextView
                android:id="@+id/textViewActivityActividadTiempoTotal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin1"
                android:background="@drawable/campo_redondeado_white"
                android:paddingTop="@dimen/padding0"
                android:textAlignment="center"
                android:textSize="@dimen/ActividadFontText" />

            <TextView
                android:id="@+id/textViewActivityActividadMedio"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin1"
                android:text="@string/medio"

                android:textSize="@dimen/ActividadFontText" />

            <TextView
                android:id="@+id/textViewActivityActividadTiempoMedio"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin1"
                android:background="@drawable/campo_redondeado_white"
                android:paddingTop="@dimen/padding0"
                android:textAlignment="center"
                android:textSize="@dimen/ActividadFontText" />

            <TextView
                android:id="@+id/textViewActivityActividadJugadas"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin1"
                android:text="@string/jugados"

                android:textSize="@dimen/ActividadFontText" />

            <TextView
                android:id="@+id/textViewActivityActividadPartidasJugadas"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin1"
                android:background="@drawable/campo_redondeado_white"
                android:paddingTop="@dimen/padding0"
                android:textAlignment="center"
                android:textSize="@dimen/ActividadFontText" />

            <com.applandeo.materialcalendarview.CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:type="many_days_picker" />

            <ImageView
                android:id="@+id/buttonActivityActividadVolver"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin2"
                android:layout_marginBottom="@dimen/margin3"
                android:background="@drawable/boton_redondeado"
                android:contentDescription="@string/volver_atr_s"
                android:onClick="go_back"
                android:padding="@dimen/padding1"

                android:paddingBottom="@dimen/padding2"
                android:src="@drawable/go_left" />

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/lineInferior"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightLineBanner"
        android:background="@color/colorlinebanner"
        app:layout_constraintBottom_toTopOf="@+id/LayoutBannerInferior"
        android:layout_marginTop="@dimen/marginLineBanner"
        />
    <LinearLayout
        android:id="@+id/LayoutBannerInferior"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bannerHeight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.gms.ads.AdView
            android:id="@+id/bannerInferior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:adSize="SMART_BANNER"
            app:adUnitId="@string/admobbannercodeinferior"
            android:layout_marginTop="@dimen/marginLineBanner"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>