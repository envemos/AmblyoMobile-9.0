<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.evm.amblyopiamobilegames.juegos.Reglas"
    android:padding="16dp"
    >

    <TextView
        android:text="asdasd"
        android:id="@+id/textViewNombreJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="@dimen/font_grande"
        android:fontFamily="@font/anton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/colorVerde"/>

    <ScrollView
        android:id="@+id/scrollViewreglas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewNombreJuego"
        app:layout_constraintBottom_toTopOf="@+id/buttonVolver"
        app:layout_constraintVertical_bias="0.0"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/buttonVolver">

            <TextView
                android:id="@+id/textViewReglas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/archivo_black"
                android:textSize="@dimen/font_size_medium"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/buttonVolver"
                android:textColor="@color/colorAzul"
                android:text="aqio ira el texto aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRojo"
        android:fontFamily="@font/anton"
        android:onClick="finish"
        android:text="@string/volver_atr_as"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/font_size_medium" />

</LinearLayout>
